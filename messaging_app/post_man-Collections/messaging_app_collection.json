{
  "info": {
    "name": "Messaging App API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "a1b2c3d4-e5f6-7890-gh12-ijklmnopqrst"
  },
  "item": [
    {
      "name": "Login - Get JWT Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/token/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "token", ""]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"your_username\",\n  \"password\": \"your_password\"\n}"
        }
      }
    },
    {
      "name": "Create Conversation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/conversations/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", ""]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipient_id\": 2\n}"
        }
      }
    },
    {
      "name": "Send Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/messages/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "messages", ""]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"conversation_id\": 1,\n  \"body\": \"Hello from Postman!\"\n}"
        }
      }
    },
    {
      "name": "Fetch Messages (Paginated)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/messages/?page=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "messages", ""],
          "query": [
            {
              "key": "page",
              "value": "1"
            }
          ]
        }
      }
    },
    {
      "name": "Unauthorized Access Test",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/messages/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "messages", ""]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "paste_your_token_here"
    }
  ]
}
